<%= form_for(@song) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, :value => @song.title %>
  <%= f.label :released %>
  <%= f.check_box :released, checked = @song.released %>
  <%= f.label :release_year %>
  <%= f.text_field :release_year, @song.release_year %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, @song.author_name %>
  <%= f.label :genre %>
  <%= f.text_field :genre, @song.genre %>
  <%= f.submit 'Create Song' %>

<% end %>
